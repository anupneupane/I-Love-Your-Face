<h2>Tell us about you...</h2>

<%= simple_form_for(@user, {url: "/users/profile"}) do |f| %>
	<%= f.error_notification %>

	 <div class="form-inputs">
    <%= f.input :about_me, :autofocus => true %>
    <%= f.input :about_my_match %>
    <%= f.input :dealbreakers %>
  </div>


	<div>
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>